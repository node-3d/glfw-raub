{
	"author": "Luis Blanco <luisblanco1337@gmail.com>",
	"name": "glfw-raub",
	"version": "5.5.0",
	"description": "GLFW for Node.js",
	"license": "MIT",
	"main": "index.js",
	"keywords": [
		"addon",
		"glfw",
		"opengl",
		"gl",
		"graphics",
		"window",
		"c++",
		"bindings",
		"native",
		"gyp"
	],
	"files": [
		"js",
		"core.js",
		"index.js",
		"index.d.ts",
		"install.js",
		"LICENSE",
		"package.json",
		"README.md"
	],
	"engines": {
		"node": ">=20.14.0",
		"npm": ">=10.7.0"
	},
	"scripts": {
		"postinstall": "node install",
		"eslint": "eslint .",
		"build": "cd src && node-gyp rebuild -j max --silent && node -e \"require('addon-tools-raub').cpbin('glfw')\" && cd ..",
		"build-only": "cd src && node-gyp build -j max --silent && node -e \"require('addon-tools-raub').cpbin('glfw')\" && cd ..",
		"test": "node --test --watch .",
		"test-ci": "node --test"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/node-3d/glfw-raub.git"
	},
	"dependencies": {
		"addon-tools-raub": "^8.0.0",
		"deps-opengl-raub": "^6.0.0",
		"segfault-raub": "^2.3.0"
	},
	"devDependencies": {
		"@types/node": "^20.12.13",
		"@eslint/js": "^9.3.0",
		"eslint": "^9.3.0",
		"node-addon-api": "^8.0.0",
		"typescript": "^5.4.5"
	}
}
